{
  "name": "@tuplo/unhandler",
  "description": "Creates bug reports for uncaught exceptions and unhandled rejections",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/unhandler.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "error handling",
    "error monitoring",
    "github issues"
  ],
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "engines": {
    "node": ">=12"
  },
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/node": "15.0.3",
    "@types/node-fetch": "2.5.10",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "create-cert": "1.0.6",
    "esbuild": "0.11.20",
    "eslint": "7.26.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.6",
    "jest": "26.6.3",
    "prettier": "2.3.0",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4"
  },
  "scripts": {
    "build": "bash scripts/build.sh",
    "ci:test": "jest --ci",
    "lint": "eslint src/**/*.ts",
    "test": "jest --watch",
    "ts-check": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "import/extensions": 0,
      "jest/no-hooks": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
