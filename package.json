{
	"name": "@tuplo/unhandler",
	"description": "Creates bug reports for uncaught exceptions and unhandled rejections",
	"version": "0.0.0-development",
	"repository": "git@github.com:tuplo/unhandler.git",
	"author": "Rui Costa",
	"license": "MIT",
	"keywords": [
		"error handling",
		"error monitoring",
		"github issues"
	],
	"files": [
		"dist/index.cjs",
		"dist/index.mjs",
		"dist/index.d.ts",
		"dist/github.d.ts"
	],
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"exports": {
		".": [
			{
				"import": {
					"types": "./dist/index.d.ts",
					"default": "./dist/index.mjs"
				},
				"require": {
					"types": "./dist/index.d.ts",
					"default": "./dist/index.cjs"
				},
				"default": "./dist/index.mjs"
			},
			"./dist/index.mjs"
		]
	},
	"types": "dist/index.d.ts",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"build": "tsx sh/build.ts",
		"dev": "tsx sh/dev.ts",
		"format": "prettier --write src sh",
		"lint:ts": "tsc --noEmit",
		"lint": "eslint src",
		"coverage": "tsx sh/coverage.ts",
		"test:ci": "vitest run",
		"test": "vitest --watch"
	},
	"dependencies": {
		"@tuplo/fetch": "1.10.0"
	},
	"devDependencies": {
		"@types/node": "18.15.11",
		"@typescript-eslint/eslint-plugin": "5.58.0",
		"@typescript-eslint/parser": "5.58.0",
		"@vitest/coverage-c8": "0.30.1",
		"create-cert": "1.0.6",
		"esbuild": "0.17.16",
		"eslint": "8.38.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-jest": "27.2.1",
		"nyc": "15.1.0",
		"prettier": "2.8.7",
		"tsx": "3.12.6",
		"typescript": "5.0.4",
		"vitest": "0.30.1",
		"zx": "7.2.1"
	}
}
