{
	"name": "@tuplo/unhandler",
	"description": "Creates bug reports for uncaught exceptions and unhandled rejections",
	"version": "0.0.0-development",
	"repository": "git@github.com:tuplo/unhandler.git",
	"author": "Rui Costa",
	"license": "MIT",
	"keywords": [
		"error handling",
		"error monitoring",
		"github issues"
	],
	"files": [
		"dist/index.cjs",
		"dist/index.mjs",
		"dist/index.d.ts",
		"dist/github.d.ts"
	],
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"exports": {
		".": [
			{
				"import": {
					"types": "./dist/index.d.ts",
					"default": "./dist/index.mjs"
				},
				"require": {
					"types": "./dist/index.d.ts",
					"default": "./dist/index.cjs"
				},
				"default": "./dist/index.mjs"
			},
			"./dist/index.mjs"
		]
	},
	"types": "dist/index.d.ts",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "tsx sh/build.ts",
		"dev": "tsx sh/dev.ts",
		"format": "prettier --write src sh",
		"lint:ts": "tsc --noEmit",
		"lint": "eslint src",
		"coverage": "tsx sh/coverage.ts",
		"test:ci": "vitest run",
		"test": "vitest --watch",
		"upgrade": "npm-check-updates -u && npm install"
	},
	"devDependencies": {
		"@tuplo/shell": "1.2.2",
		"@types/node": "22.5.0",
		"@vitest/coverage-v8": "2.0.5",
		"create-cert": "1.0.6",
		"esbuild": "0.23.1",
		"eslint": "9.9.1",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-unicorn": "55.0.0",
		"eslint-plugin-vitest": "0.5.4",
		"npm-check-updates": "17.1.0",
		"nyc": "17.0.0",
		"prettier": "3.3.3",
		"tsx": "4.17.0",
		"typescript": "5.5.4",
		"typescript-eslint": "8.2.0",
		"vitest": "2.0.5"
	}
}
