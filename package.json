{
  "name": "@tuplo/unhandler",
  "description": "Creates bug reports for uncaught exceptions and unhandled rejections",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/unhandler.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "error handling",
    "error monitoring",
    "github issues"
  ],
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "module": "lib/index.modern.js",
  "source": "src/index.ts",
  "types": "lib/index.d.ts",
  "dependencies": {
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.14",
    "@types/node": "14.11.2",
    "@types/node-fetch": "2.5.7",
    "@typescript-eslint/eslint-plugin": "4.2.0",
    "@typescript-eslint/parser": "4.2.0",
    "commitizen": "4.2.1",
    "create-cert": "1.0.6",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.9.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "24.0.2",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "microbundle": "0.12.3",
    "prettier": "2.1.2",
    "ts-jest": "26.4.0",
    "typescript": "4.0.3"
  },
  "scripts": {
    "build": "microbundle --target node --sourcemap false --format cjs,modern",
    "lint": "eslint 'src/**'",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
