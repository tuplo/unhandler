{
  "name": "@tuplo/unhandler",
  "description": "Creates bug reports for uncaught exceptions and unhandled rejections",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/unhandler.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "error handling",
    "error monitoring",
    "github issues"
  ],
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "dependencies": {
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.19",
    "@types/node": "14.14.6",
    "@types/node-fetch": "2.5.7",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "commitizen": "4.2.2",
    "create-cert": "1.0.6",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.16.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "microbundle": "0.13.0",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "scripts": {
    "build": "microbundle --target node --sourcemap false --format cjs,modern --tsconfig tsconfig.build.json",
    "ci:test": "jest --ci",
    "lint": "eslint src/**/*.ts",
    "test": "jest --watch",
    "ts-check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "import/extensions": 0,
      "jest/no-hooks": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
