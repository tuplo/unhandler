{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "target": "es6",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
